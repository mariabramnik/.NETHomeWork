<Window x:Class="HomeWork52part3BuyTicket.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWork52part3BuyTicket"
        mc:Ignorable="d"
               Title="Login" Height="450" Width="800" FontSize="20" Background="#04c582" x:Name="loginWindow">

    <Border Background="#2e3137" CornerRadius="20" Margin="25">
        <StackPanel Margin="25">
            <Label Content="LOGIN" Foreground="White" FontSize="25" HorizontalAlignment="Center">

            </Label>
            <Separator></Separator>
            <Label Content="USERNAME" Foreground="White" Margin="170,0,170,0"></Label>
            <TextBox x:Name="txtUsername" Background="#545d6a" Foreground="White" FontSize="18" Margin="170,0,170,0"></TextBox>
            <Label Content="PASSWORD" Foreground="White" Margin="170,0,170,0"></Label>
            <PasswordBox x:Name="txtPassword" Background="#545d6a" Foreground="White" FontSize="18" Margin="170,0,170,0" ></PasswordBox>
            <Button x:Name="btnSubmit" Background="#545d6a" Foreground="White" FontSize="18" Content="Submit" Margin="250 40" Click="btnSubmit_Click"></Button>
        </StackPanel>

    </Border>
</Window>

